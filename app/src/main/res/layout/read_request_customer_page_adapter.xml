<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="366dp"
        android:layout_height="202dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-52dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="MissingConstraints">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="326dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="130dp"
                                        android:layout_height="150dp"
                                        android:background="@color/darkGreen"
                                        android:orientation="horizontal">
                                    </ImageView>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginLeft="6dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="28dp"
                                        android:layout_marginTop="-6dp"
                                        android:layout_marginRight="4dp"
                                        android:background="@drawable/ic_baseline_connect_without_contact_24" />
                                    <TextView
                                        android:id="@+id/tvContactCustomer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:text="@string/contact_customer_abbreviation"
                                        android:textSize="8dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="214dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginStart="-18dp"
                                android:layout_marginEnd="2dp"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="6dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                tools:ignore="MissingConstraints">
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="2dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tvNameCustomer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_marginRight="12dp"
                                        android:layout_marginLeft="12dp"
                                        android:text="@string/name_customer_abbreviation"
                                        android:textSize="18dp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:id="@+id/tvDomicileCustomer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_marginRight="12dp"
                                        android:layout_marginLeft="12dp"
                                        android:text="@string/domicile_customer_abbreviation"
                                        android:textSize="12dp"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:id="@+id/tvDescriptionRequestCustomer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="108dp"
                                        android:layout_marginTop="18dp"
                                        android:layout_marginBottom="2dp"
                                        android:background="@drawable/et_custom_rectangle_white"
                                        android:drawablePadding="8dp"
                                        android:gravity="top"
                                        android:scrollbars="none"
                                        android:scrollHorizontally="false"
                                        android:overScrollMode="always"
                                        android:inputType="textMultiLine"
                                        android:singleLine="false"
                                        android:lines="8"
                                        android:minLines="8"
                                        android:maxLines="8"
                                        android:maxLength="255"
                                        android:padding="8dp"
                                        android:hint="@string/description_request_customer"
                                        android:fontFamily="sans-serif"
                                        android:textSize="14dp"
                                        android:ems="14" />
                                </LinearLayout>
                            </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="-6dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvIdentifierRequestCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/identifier_request_customer_abbreviation"
                        android:textSize="12dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tvLocationProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/location_project"
                        android:textSize="12dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tvPriceListProjectCash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/price_list_project_cash"
                        android:textSize="12dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tvPriceListProjectCredit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/price_list_project_credit"
                        android:textSize="12dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tvStatusProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/status_project"
                        android:textSize="12dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
