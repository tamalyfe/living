<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".userInterface.mainPage.mapPage.MapPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="74dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="-12dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/logo_living_page" />
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tHomePage"
            android:layout_width="144dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingTop="20dp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNormalMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginTop="-2dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_map_24"
            android:background="@color/darkGreen"
            app:backgroundTint="@android:color/white"
            app:fabCustomSize="24dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSatelliteMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginTop="-2dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_satellite_24"
            android:background="@color/darkGreen"
            app:backgroundTint="@android:color/white"
            app:fabCustomSize="24dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTerrainMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginTop="-2dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_terrain_24"
            android:background="@color/darkGreen"
            app:backgroundTint="@android:color/white"
            app:fabCustomSize="24dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabHybridMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginTop="-2dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_view_sidebar_24"
            android:background="@color/darkGreen"
            app:backgroundTint="@android:color/white"
            app:fabCustomSize="24dp"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="-30dp"
        android:background="@color/white" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="666dp"/>
</LinearLayout>